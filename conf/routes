# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /sample                     controllers.Application.sample

GET     /login                      controllers.LoginController.index
POST    /login                      controllers.LoginController.tryLogin


# Article API
GET     /article/*id                controllers.ArticleController.read(id)

PUT     /api/article.json	       controllers.ArticleController.Api.persist
#DELETE  /api/article/*id.json     controllers.ArticleController.Api.delete(id)
GET    /api/article/*id.json       controllers.ArticleController.Api.edit(id)


# Socket
GET    /socket                    controllers.SocketController.index
PUT    /socket                    controllers.SocketController.pushMessage


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
